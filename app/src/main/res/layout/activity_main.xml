<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#f20"
        android:textSize="20sp"
        android:text="0"
        android:id="@+id/textviewdiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imageviewHinhgoc"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/nophoto"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:background="#FFEB3B"
        android:textColor="#f20"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:gravity="center"
        android:text="Chọn hình bên dưới"
        android:layout_marginTop="30dp"
        android:layout_below="@id/imageviewHinhgoc"
        android:id="@+id/textviewTieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@id/textviewTieude"
        android:id="@+id/imageviewHinhchon"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/nophoto"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />
</RelativeLayout>